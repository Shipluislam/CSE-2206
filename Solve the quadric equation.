/// Solve the quadric equation.
#include<iostream>
#include<cmath>
using namespace std;
int main()
{
    float a, b, c, d, x1, x2,i,r;
    cout<<"Enter the value of (a,b,c): ";
    cin>>a>>b>>c;
    d=b*b-4*a*c;
    if(d==0)
    {
        cout<<"x1 = "<<(-b)/(2*a)<<endl;
        cout<<"x2 = "<<(-b)/(2*a)<<endl;
    }
    else if(d>0)
    {
        cout<<"x1 = "<<(-b+sqrt(d))/2*a<<endl;
        cout<<"x2 = "<<(-b-sqrt(d))/2*a<<endl;
    }
    else
    {
        r = (-b)/2*a;
        i = (sqrt(-d))/(2*a);
        cout<<"x1 = "<<r<<"+"<<i<<"i"<<endl;
        cout<<"x1 = "<<r<<"-"<<i<<"i"<<endl;
    }
    return 0;
}
